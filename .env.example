# =============================================================================
# Node.js Fullstack Starter - Environment Variables
# =============================================================================

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=development
PORT=8080
HOST="0.0.0.0"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (PostgreSQL, MySQL, or MongoDB)
DB=postgres
DB_URL=postgresql://username:password@localhost:5432/database_name

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis URL for caching, sessions, and rate limiting
REDIS_URL=redis://localhost:6379

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRES_IN=7d

# Password hashing
BCRYPT_SALT_ROUNDS=12

# =============================================================================
# RATE LIMITING
# =============================================================================

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING
# =============================================================================

# Log level: error, warn, info, debug
LOG_LEVEL=info

# =============================================================================
# CORS & SECURITY
# =============================================================================

# CORS origin (frontend URL)
CORS_ORIGIN=http://localhost:5173

# =============================================================================
# FRONTEND CONFIGURATION (Vite)
# =============================================================================

# Frontend server configuration
VITE_SERVER_PORT=5173
VITE_SERVER_HOST=localhost
VITE_SERVER_SSL=false

# SSL certificates (for HTTPS in development)
VITE_SERVER_SSL_KEY=
VITE_SERVER_SSL_CERT=


# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Production overrides (uncomment and modify as needed)
# NODE_ENV=production
# PORT=8080
# CORS_ORIGIN=https://yourdomain.com
# VITE_SERVER_PORT=443
# VITE_SERVER_SSL=true

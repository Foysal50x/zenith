{
  "name": "zenith",
  "version": "1.0.0",
  "description": "Zenith: Peak Development Experience - A modern, modular, and scalable fullstack project template using Node.js, React 19, TypeScript, and more",
  "main": "dist/main.js",
  "type": "module",
  "imports": {
    "#config/*.js": "./dist/config/*.js",
    "#core/*.js": "./dist/core/*.js",
    "#db/*.js": "./dist/db/*.js",
    "#http/*.js": "./dist/http/*.js",
    "#services/*.js": "./dist/services/*.js",
    "#utils/*.js": "./dist/utils/*.js",
    "#types/*.js": "./dist/types/*.js"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch src/main.ts",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "cd client && npm run build",
    "start": "NODE_OPTIONS=\"--max-old-space-size=2048\" node dist/main.js",
    "start:prod": "NODE_ENV=production npm run start",
    "preview": "npm run build && npm run start:prod",
    "clean": "rm -rf dist && rm -rf client/dist && rm -rf public/dist",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "migrate": "drizzle-kit push",
    "migrate:generate": "drizzle-kit generate",
    "migrate:studio": "drizzle-kit studio",
    "setup:env": "node scripts/setup-env.js",
    "setup:env:dev": "node scripts/setup-env.js development",
    "setup:env:prod": "node scripts/setup-env.js production",
    "setup:env:test": "node scripts/setup-env.js test",
    "postinstall": "cd client && npm install"
  },
  "keywords": [
    "zenith",
    "nodejs",
    "express",
    "react",
    "typescript",
    "fullstack",
    "template",
    "starter",
    "boilerplate",
    "modern"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@poppinss/hooks": "^7.2.6",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.3",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "postgres": "^3.4.3",
    "rate-limiter-flexible": "^5.0.3",
    "redis": "^4.6.12",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitest/coverage-v8": "^1.0.4",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.20.7",
    "eslint": "^8.55.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=20.10.0",
    "npm": ">=10.0.0"
  }
}
